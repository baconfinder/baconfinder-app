{% extends "TomSawyerBaconFinderWebBundle:Default:layout.html.twig" %}

{% block content %}

    <div class="row">
        <div class="col-sm-6">
            <h2>{{ app.user.username }}</h2>
            <p>
                {% if app.user.facebookId %}
                <button class="btn btn-facebook disabled">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Facebook account joined
                </button>
                {% else %}
                    <button class="btn btn-facebook">
                        <a href="{{ hwi_oauth_login_url('facebook') }}">Join your Facebook account</a>
                    </button>
                {% endif %}

                {% if app.user.twitterId %}
                    <button class="btn btn-twitter disabled">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Twitter account joined
                    </button>
                {% else %}
                    <button class="btn btn-twitter">
                        <a href="{{ hwi_oauth_login_url('twitter') }}">Join your Twitter account</a>
                    </button>
                {% endif %}
            </p>
            <hr />
            <h3>Number of connections :
                {{ render(controller('TomSawyerBaconFinderWebBundle:Default:connectionsCount')) }}
            </h3>
        </div>

        <div class="col-sm-6">
            <h2>
                Search connection
            </h2>
            <div>
                <form method="POST">
                    <input type="text" placeholder="Enter name here..." id="searchConnection" name="name" class="ui-autocomplete-input"/>
                </form>
            </div>
            <div id="suggestBox">

            </div>
        </div>
    </div>

{% endblock %}